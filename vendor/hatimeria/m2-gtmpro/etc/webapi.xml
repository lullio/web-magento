<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/guest-carts/:cartId/:step/gtmpro-checkout-step-data/:param" method="GET">
        <service class="Hatimeria\GtmPro\Api\GuestCheckoutStepInterface" method="get"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/carts/mine/:step/gtmpro-checkout-step-data/:param" method="GET">
        <service class="Hatimeria\GtmPro\Api\CheckoutStepInterface" method="get"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
